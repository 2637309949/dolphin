<controller name="user" desc="用户">
    <api name="add" function="add" table="user" desc="添加用户" method="post">
        <param name="user" type="$user" desc="用户信息" />
    </api>
    <api name="update" function="update" table="user" desc="更新用户" method="post">
        <param name="user" type="$user" desc="用户信息" />
    </api>
    <api name="list" function="list" table="user" desc="用户分页查询" method="get">
        <param name="page" type="int" desc="页码" />
        <param name="size" type="int" desc="单页数" />
    </api>
    <api name="get" desc="获取用户信息" function="one" table="user" method="get">
        <param name="id" type="string" desc="用户id" />
    </api>
</controller>