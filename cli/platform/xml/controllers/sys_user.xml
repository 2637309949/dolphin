<controller name="sys_user" desc="用户">
    <api name="add" function="add" table="sys_user" desc="添加用户" method="post">
        <param name="user" type="$sys_role" desc="用户信息" />
        <return>
            <success type="$response"/>
            <failure type="$response"/>
        </return>
    </api>
    <api name="update" function="update" table="sys_user" desc="更新用户" method="post">
        <param name="user" type="$sys_role" desc="用户信息" />
        <return>
            <success type="$response"/>
            <failure type="$response"/>
        </return>
    </api>
    <api name="page" function="list" table="sys_user" desc="用户分页查询" method="get">
        <param name="page" type="int" desc="页码" />
        <param name="size" type="int" desc="单页数" />
        <return>
            <success type="$response"/>
            <failure type="$response"/>
        </return>
    </api>
    <api name="get" desc="获取用户信息" function="one" table="sys_user" method="get">
        <param name="id" type="string" desc="用户id" />
        <return>
            <success type="$response"/>
            <failure type="$response"/>
        </return>
    </api>
</controller>