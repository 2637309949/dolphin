<controller name="sys_attachment" desc="附件">
    <api name="add" function="add" table="sys_attachment" desc="添加附件" method="post">
        <param name="user" type="$sys_role" desc="附件信息" />
    </api>
    <api name="update" function="update" table="sys_attachment" desc="更新附件" method="post">
        <param name="user" type="$sys_role" desc="附件信息" />
    </api>
    <api name="page" function="list" table="sys_attachment" desc="附件分页查询" method="get">
        <param name="page" type="int" desc="页码" />
        <param name="size" type="int" desc="单页数" />
    </api>
    <api name="get" desc="获取附件信息" function="one" table="sys_attachment" method="get">
        <param name="id" type="string" desc="附件id" />
    </api>
</controller>