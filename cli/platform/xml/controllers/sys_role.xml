        <param name="role" type="$sys_role" desc="角色信息" />
        <return>
            <success type="$response"/>
            <failure type="$response"/>
        </return>
    </api>
    <api name="update" function="update" table="sys_role" desc="更新角色" method="post">
        <param name="role" type="$sys_role" desc="角色信息" />
