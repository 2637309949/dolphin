<controller name="dtm" desc="dtm controller">
    <!-- TCC 例子操作 -->
    <api name="tcc" desc="try" auth="never" method="get">
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <!-- 出账， 部署在A服务 -->
    <api name="trans_out" desc="try" auth="never" method="post">
        <param name="trans_req" type="$trans_req" desc="交易信息"/>
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <api name="trans_out_confirm" desc="confirm" auth="never" method="post">
        <param name="trans_req" type="$trans_req" desc="交易信息"/>
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <api name="trans_out_revert" desc="cancel" auth="never" method="post">
        <param name="trans_req" type="$trans_req" desc="交易信息"/>
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <!-- 入账， 部署在B服务 -->
    <api name="trans_in" desc="try" auth="never" method="post">
        <param name="trans_req" type="$trans_req" desc="交易信息"/>
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <api name="trans_in_confirm" desc="confirm" auth="never" method="post">
        <param name="trans_req" type="$trans_req" desc="交易信息"/>
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <api name="trans_in_revert" desc="cancel" auth="never" method="post">
        <param name="trans_req" type="$trans_req" desc="交易信息"/>
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
</controller>