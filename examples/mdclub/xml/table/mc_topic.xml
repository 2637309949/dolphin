<table name="mc_topic" desc="话题表" packages="github.com/2637309949/dolphin/packages/null,github.com/shopspring/decimal">
	<column name="topic_id" desc="话题ID" type="null.Int" xorm="int(11) pk notnull autoincr" />
	<column name="name" desc="话题名称" type="null.String" xorm="varchar(20) notnull default('')" />
	<column name="cover" desc="封面图片token" type="null.String" xorm="varchar(50)" />
	<column name="description" desc="话题描述" type="null.String" xorm="varchar(1000) notnull default('')" />
	<column name="article_count" desc="文章数量" type="null.Int" xorm="int(11) notnull default(0)" />
	<column name="question_count" desc="问题数量" type="null.Int" xorm="int(11) notnull default(0)" />
	<column name="follower_count" desc="关注者数量" type="null.Int" xorm="int(11) notnull default(0)" />
	<column name="delete_time" desc="删除时间" type="null.Int" xorm="int(10) notnull default(0)" />
</table>