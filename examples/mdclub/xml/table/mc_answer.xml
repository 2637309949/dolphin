	<column name="vote_up_count" desc="赞成票总数" type="null.Int" xorm="int(11) notnull default(0)" />
	<column name="vote_down_count" desc="反对票总数" type="null.Int" xorm="int(11) notnull default(0)" />
	<column name="create_time" desc="创建时间" type="null.Int" xorm="int(10) notnull default(0)" />
	<column name="update_time" desc="更新时间" type="null.Int" xorm="int(10) notnull default(0)" />
	<column name="delete_time" desc="删除时间" type="null.Int" xorm="int(10) notnull default(0)" />
</table>