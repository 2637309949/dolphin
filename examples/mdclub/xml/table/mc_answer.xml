	<column name="question_id" desc="问题ID" type="null.Int" xorm="int(11) notnull" />
	<column name="user_id" desc="用户ID" type="null.Int" xorm="int(11) notnull" />
	<column name="content_markdown" desc="原始的正文内容" type="null.String" xorm="text(0) notnull" />
