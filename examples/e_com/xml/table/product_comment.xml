<table name="product_comment" desc="商品评论表" packages="github.com/2637309949/dolphin/packages/null,github.com/shopspring/decimal">
	<column name="comment_id" desc="评论ID" type="null.Int" xorm="int(10) pk notnull autoincr" />
	<column name="product_id" desc="商品ID" type="null.Int" xorm="int(10) notnull" />
	<column name="order_id" desc="订单ID" type="null.Int" xorm="bigint(20) notnull" />
	<column name="customer_id" desc="用户ID" type="null.Int" xorm="int(10) notnull" />
	<column name="title" desc="评论标题" type="null.String" xorm="varchar(50) notnull" />
	<column name="content" desc="评论内容" type="null.String" xorm="varchar(300) notnull" />
	<column name="audit_status" desc="审核状态：0未审核，1已审核" type="null.Int" xorm=" notnull" />
	<column name="audit_time" desc="评论时间" type="null.Time" xorm=" notnull default(CURRENT_TIMESTAMP)" />

	<column name="creater" desc="创建人" type="null.Int" xorm="bigint(20) notnull" />
	<column name="create_time" desc="创建时间" type="null.Time" xorm="datetime" />
	<column name="updater" desc="最后更新人" type="null.Int" xorm="bigint(20) notnull" />
	<column name="update_time" desc="最后更新时间" type="null.Time" xorm="datetime" />
	<column name="is_delete" desc="删除标记" type="null.Int" xorm="notnull" />
	<column name="remark" desc="备注" type="null.String" xorm="varchar(200)" />
</table>