<table name="order_cart" desc="购物车表" packages="github.com/2637309949/dolphin/packages/null,github.com/shopspring/decimal">
	<column name="cart_id" desc="购物车ID" type="null.Int" xorm="int(10) pk notnull autoincr" />
	<column name="customer_id" desc="用户ID" type="null.Int" xorm="int(10) notnull" />
	<column name="product_id" desc="商品ID" type="null.Int" xorm="int(10) notnull" />
	<column name="product_amount" desc="加入购物车商品数量" type="null.Int" xorm="int(11) notnull" />
	<column name="price" desc="商品价格" type="decimal.Decimal" xorm="decimal(8,2) notnull" />
	<column name="add_time" desc="加入购物车时间" type="null.Time" xorm=" notnull default(CURRENT_TIMESTAMP)" />

	<column name="creater" desc="创建人" type="null.Int" xorm="bigint(20) notnull" />
	<column name="create_time" desc="创建时间" type="null.Time" xorm="datetime" />
	<column name="updater" desc="最后更新人" type="null.Int" xorm="bigint(20) notnull" />
	<column name="update_time" desc="最后更新时间" type="null.Time" xorm="datetime" />
	<column name="is_delete" desc="删除标记" type="null.Int" xorm="notnull" />
	<column name="remark" desc="备注" type="null.String" xorm="varchar(200)" />
</table>