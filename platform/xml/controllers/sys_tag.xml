<controller name="sys_tag" desc="标签">
    <api name="add" function="add" table="sys_tag" desc="添加标签" method="post">
        <param name="sys_tag" type="$sys_tag" desc="标签信息" />
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <api name="del" function="delete" table="sys_tag" desc="删除标签" method="delete">
        <param name="sys_tag" type="$sys_user_template" desc="标签" />
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <api name="update" function="update" table="sys_tag" desc="更新标签" method="put">
        <param name="sys_tag" type="$sys_tag" desc="标签信息" />
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <api name="page" function="page" table="sys_tag" desc="标签分页查询" method="get">
        <param name="page" type="int" desc="页码" value="1"/>
        <param name="size" type="int" desc="单页数" value="15" />
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <api name="get" desc="获取标签信息" function="one" table="sys_tag" method="get">
        <param name="id" type="string" desc="标签id" />
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
</controller>