<controller name="sys_domain" desc="域">
    <api name="add" func="add" table="sys_domain" desc="添加域" method="post">
        <param name="user" type="$sys_domain" desc="域信息" />
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <api name="del" func="delete" table="sys_domain" desc="删除域" method="delete">
        <param name="sys_domain" type="$sys_domain" desc="域" />
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <api name="update" func="update" table="sys_domain" desc="更新域" method="put">
        <param name="user" type="$sys_role" desc="域信息" />
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <api name="page" func="page" table="sys_domain" desc="域分页查询" method="get">
        <param name="page" type="int" desc="页码" value="1"/>
        <param name="size" type="int" desc="单页数" value="15" />
        <param name="app_name" type="string" desc="所属应用"/>
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <api name="get" desc="获取域信息" func="one" table="sys_domain" method="get">
        <param name="id" type="string" desc="域id" />
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
</controller>