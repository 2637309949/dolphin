<controller name="sys_cas" desc="认证中心">
    <api name="login" desc="登录信息" method="post" auth="false">
        <param name="user" type="$user" desc="用户信息" />
        <return>
            <success type="$response"/>
            <failure type="$response"/>
        </return>
    </api>
    <api name="affirm" desc="用户授权" method="post" auth="false">
        <return>
            <success type="$response"/>
            <failure type="$response"/>
        </return>
    </api>
    <api name="authorize" desc="用户授权" method="get" auth="false">
        <return>
            <success type="$response"/>
            <failure type="$response"/>
        </return>
    </api>
    <api name="token" desc="获取令牌" method="post" auth="false">
        <return>
            <success type="$response"/>
            <failure type="$response"/>
        </return>
    </api>
    <api name="url" desc="授权地址" method="get" auth="false">
        <return>
            <success type="$response"/>
            <failure type="$response"/>
        </return>
    </api>
    <api name="oauth2" desc="授权回调" method="get" auth="false">
        <return>
            <success type="$response"/>
            <failure type="$response"/>
        </return>
    </api>
    <api name="refresh" desc="刷新令牌" method="get" auth="false">
        <return>
            <success type="$response"/>
            <failure type="$response"/>
        </return>
    </api>
</controller>