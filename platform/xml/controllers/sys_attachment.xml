<controller name="sys_attachment" desc="附件">
    <api name="add" func="add" table="sys_attachment" desc="添加附件" method="post">
        <param name="user" type="$sys_role" desc="附件信息" />
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <api name="upload" desc="上传附件" method="post">
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <api name="del" func="delete" table="sys_attachment" desc="删除附件" method="delete">
        <param name="sys_attachment" type="$sys_attachment" desc="附件" />
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <api name="update" func="update" table="sys_attachment" desc="更新附件" method="put">
        <param name="user" type="$sys_role" desc="附件信息" />
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <api name="page" func="page" table="sys_attachment" desc="附件分页查询" method="get">
        <param name="page" type="int" desc="页码" value="1"/>
        <param name="size" type="int" desc="单页数" value="15" />
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <api name="get" desc="获取附件信息" func="one" table="sys_attachment" method="get">
        <param name="id" type="string" desc="附件id" />
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
</controller>