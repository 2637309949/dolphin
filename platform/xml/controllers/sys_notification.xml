<controller name="sys_notification" desc="站内消息">
    <api name="add" func="add" table="sys_notification" desc="添加站内消息" method="post">
        <param name="notification" type="$sys_notification" desc="站内消息信息" />
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <api name="del" func="delete" table="sys_notification" desc="删除站内消息" method="delete">
        <param name="sys_notification" type="$sys_notification" desc="站内消息" />
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <api name="update" func="update" table="sys_notification" desc="更新站内消息" method="put">
        <param name="notification" type="$sys_role" desc="站内消息信息" />
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <api name="page" func="page" table="sys_notification" desc="站内消息分页查询" method="get">
        <param name="page" type="int" desc="页码" value="1"/>
        <param name="size" type="int" desc="单页数" value="15" />
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <api name="get" desc="获取站内消息信息" func="one" table="sys_notification" method="get">
        <param name="id" type="string" desc="站内消息id" />
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
</controller>