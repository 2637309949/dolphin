<controller name="sys_client" desc="客户端">
    <api name="add" function="add" table="sys_client" desc="添加客户端" method="post">
        <param name="user" type="$sys_client" desc="客户端信息" />
        <return>
            <success type="$response"/>
            <failure type="$response"/>
        </return>
    </api>
    <api name="del" function="delete" table="sys_client" desc="删除客户端" method="delete">
        <param name="sys_client" type="$sys_client" desc="客户端" />
        <return>
            <success type="$response"/>
            <failure type="$response"/>
        </return>
    </api>
    <api name="update" function="update" table="sys_client" desc="更新客户端" method="put">
        <param name="user" type="$sys_role" desc="客户端信息" />
        <return>
            <success type="$response"/>
            <failure type="$response"/>
        </return>
    </api>
    <api name="page" function="page" table="sys_client" desc="客户端分页查询" method="get">
        <param name="page" type="int" desc="页码" value="1"/>
        <param name="size" type="int" desc="单页数" value="15" />
        <param name="app_name" type="string" desc="所属应用"/>
        <return>
            <success type="$response"/>
            <failure type="$response"/>
        </return>
    </api>
    <api name="get" desc="获取客户端信息" function="one" table="sys_client" method="get">
        <param name="id" type="string" desc="客户端id" />
        <return>
            <success type="$response"/>
            <failure type="$response"/>
        </return>
    </api>
</controller>