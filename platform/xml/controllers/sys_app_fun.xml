<controller name="sys_app_fun" desc="APP功能">
    <api name="add" function="add" table="sys_app_fun" desc="添加APP功能" method="post">
        <param name="user" type="$sys_app_fun" desc="APP功能信息" />
        <return>
            <success type="$response"/>
            <failure type="$response"/>
        </return>
    </api>
    <api name="del" function="delete" table="sys_app_fun" desc="删除APP功能" method="delete">
        <param name="sys_app_fun" type="$sys_app_fun" desc="APP功能" />
        <return>
            <success type="$response"/>
            <failure type="$response"/>
        </return>
    </api>
    <api name="update" function="update" table="sys_app_fun" desc="更新APP功能" method="put">
        <param name="user" type="$sys_role" desc="APP功能信息" />
        <return>
            <success type="$response"/>
            <failure type="$response"/>
        </return>
    </api>
    <api name="page" function="page" table="sys_app_fun" desc="APP功能分页查询" method="get">
        <param name="page" type="int" desc="页码" value="1"/>
        <param name="size" type="int" desc="单页数" value="15" />
        <return>
            <success type="$response"/>
            <failure type="$response"/>
        </return>
    </api>
    <api name="tree" table="sys_menu" desc="菜单树形结构" method="get"></api>
    <api name="get" desc="获取APP功能信息" function="one" table="sys_app_fun" method="get">
        <param name="id" type="string" desc="APP功能id" />
        <return>
            <success type="$response"/>
            <failure type="$response"/>
        </return>
    </api>
</controller>