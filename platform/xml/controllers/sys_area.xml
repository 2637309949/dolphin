<controller name="sys_area" desc="区域">
    <api name="add" func="add" table="sys_area" desc="添加区域" method="post">
        <param name="user" type="$sys_area" desc="区域信息" />
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <api name="del" func="delete" table="sys_area" desc="删除区域" method="delete">
        <param name="sys_area" type="$sys_area" desc="区域" />
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <api name="update" func="update" table="sys_area" desc="更新区域" method="put">
        <param name="user" type="$sys_role" desc="区域信息" />
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <api name="page" func="page" table="sys_area" desc="区域分页查询" method="get">
        <param name="page" type="int" desc="页码" value="1"/>
        <param name="size" type="int" desc="单页数" value="15" />
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <api name="get" desc="获取区域信息" func="one" table="sys_area" method="get">
        <param name="id" type="string" desc="区域id" />
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
</controller>