<controller name="sys_area" desc="区域">
    <api name="add" func="add" table="sys_area" method="post" desc="添加区域">
        <param name="user" type="$sys_area" desc="区域信息" />
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <api name="del" func="delete" table="sys_area" method="delete" desc="删除区域">
        <param name="sys_area" type="$sys_area" desc="区域" />
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <api name="update" func="update" table="sys_area" desc="更新区域" method="put">
        <param name="user" type="$sys_role" desc="区域信息" />
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <api name="page" func="page" table="sys_area" method="get" desc="区域分页查询">
        <param name="page" type="int" value="1" desc="页码"/>
        <param name="size" type="int"  value="15" desc="单页数"/>
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <api name="get" func="one" table="sys_area" method="get" desc="获取区域信息">
        <param name="id" type="string" desc="区域id" />
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
</controller>