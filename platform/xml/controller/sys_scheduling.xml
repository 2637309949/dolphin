<controller name="sys_scheduling" desc="调度">
    <api name="add" method="post" desc="添加调度">
        <param name="scheduling" type="$scheduling" desc="调度信息" />
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <api name="del" desc="删除调度" method="delete">
        <param name="scheduling" type="$scheduling" desc="调度" />
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <api name="update" desc="更新调度" method="put">
        <param name="scheduling" type="$scheduling" desc="调度信息" />
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <api name="page" desc="调度分页查询" method="get">
        <param name="page" type="int" value="1" desc="页码"/>
        <param name="size" type="int" value="15" desc="单页数"/>
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
    <api name="get" table="scheduling" method="get" desc="获取调度信息">
        <param name="id" type="string" desc="调度id" />
        <return>
            <success type="$success"/>
            <failure type="$fail"/>
        </return>
    </api>
</controller>