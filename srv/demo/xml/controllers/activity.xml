<controller name="activity" desc="活动">
    <api name="in_crease" table="activity" desc="增加次数" method="get" version="1.0" auth="false">
        <param name="id" type="string" desc="记录id" />
        <param name="action" type="string" desc="点赞（like）,分享（share）和收藏(collect) 收藏和点赞第一次调用次数增一，调第二次减一，分享每一次都加一" />
    </api>
    <api name="add" function="add" table="activity" desc="添加活动" method="post">
        <param name="activity" type="$activity" desc="活动对象" />
    </api>
    <api name="update" function="update" table="activity" desc="更新活动" method="post">
        <param name="activity" type="$activity" desc="活动对象" />
    </api>
    <api name="delete" desc="删除活动" method="post">
        <param name="ids" type="[]string" desc="活动id对象数组" />
    </api>
    <api name="page" function="page" table="activity" desc="活动分页查询" method="get">
        <param name="page" type="int" desc="页码" />
        <param name="rows" type="int" desc="单页数" />
        <param name="title" type="string" desc="标题筛选" />
        <param name="hidden" type="int" desc="是否隐藏筛选" />
    </api>
    <api name="page_by_area" function="page" table="activity" desc="活动分页按区域查询" method="get">
        <param name="page" type="int" desc="页码" />
        <param name="rows" type="int" desc="单页数" />
        <param name="title" type="string" desc="标题筛选" />
        <param name="campus" type="string" desc="校区id筛选" />
        <param name="city" type="string" desc="城市筛选" />
        <param name="hidden" type="int" desc="是否隐藏筛选" />
    </api>
    <api name="get" desc="获取活动" method="get">
        <param name="id" type="string" desc="活动id" />
    </api>
</controller>