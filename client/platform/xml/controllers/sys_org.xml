<controller name="sys_org" desc="组织">
    <api name="add" function="add" table="sys_org" desc="添加组织" method="post">
        <param name="user" type="$sys_org" desc="组织信息" />
        <return>
            <success type="$response"/>
            <failure type="$response"/>
        </return>
    </api>
    <api name="del" function="delete" table="sys_org" desc="删除组织" method="delete">
        <param name="sys_org" type="$sys_org" desc="组织" />
        <return>
            <success type="$response"/>
            <failure type="$response"/>
        </return>
    </api>
    <api name="update" function="update" table="sys_org" desc="更新组织" method="put">
        <param name="user" type="$sys_role" desc="组织信息" />
        <return>
            <success type="$response"/>
            <failure type="$response"/>
        </return>
    </api>
    <api name="page" function="list" table="sys_org" desc="组织分页查询" method="get">
        <param name="page" type="int" desc="页码" />
        <param name="size" type="int" desc="单页数" />
        <return>
            <success type="$response"/>
            <failure type="$response"/>
        </return>
    </api>
    <api name="get" desc="获取组织信息" function="one" table="sys_org" method="get">
        <param name="id" type="string" desc="组织id" />
        <return>
            <success type="$response"/>
            <failure type="$response"/>
        </return>
    </api>
</controller>